generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  cpf   String
  name  String
}

model Restaurante {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  cnpj      String
  endereco  String
  telefone  String
  imagem    Bytes?
  pratos    Prato[]
}

model Prato {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  nome         String
  preco        Float
  descricao    String
  imagem       Bytes?
  restaurante  Restaurante @relation(fields: [restauranteId], references: [id])
  restauranteId String
}
